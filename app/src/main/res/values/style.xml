<resources>

    <style name="CustomScannerTheme" parent="@style/zxing_CaptureTheme">
        <item name="zxing_framing_rect_width">300dp</item>
        <item name="zxing_framing_rect_height">300dp</item>
        <item name="zxing_viewfinder_laser">#67C090</item>
        <item name="zxing_viewfinder_mask">#80000000</item>
    </style>

    <style name="Screen">
        <item name="android:background">#DDF4E7</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">50dp</item>
    </style>
a
    <style name="Headings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#67C090</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="Labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#67C090</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Boxes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:backgroundTint">#124170</item>
        <item name="android:textColor">#67C090</item>
    </style>

    <style name="Toggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:backgroundTint">#124170</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="Tables">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>